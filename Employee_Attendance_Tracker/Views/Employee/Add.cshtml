 
@model Employee_Attendance_Tracker.MVC.Models.AddEmployeeViewModel

<h1 class="mt-3">Add Employee</h1>
<form method="post">

	<div class="mt-3">
		<label class="form-label">Name</label>
		<input type="text" pattern=".{3, 128}" class="form-control" required asp-for="Name"/>
	</div>

	<div class="mt-3">
		<label class="form-label">Designation</label>
		<input type="text" pattern=".{2, 225}" class="form-control" required asp-for="Designation"/>
	</div>

	<div class="mt-3">
		<label class="form-label">JoinDate</label>
		<input type="date"  class="form-control" required asp-for="JoinDate"/>
	</div>

	<div class="mt-3">
		<label class="form-label">StatusId</label>
		<input type="text" size="6" class="form-control" required asp-for="StatusId"/>
    </div>

	<div class="mt-3">
		<label class="form-label">Gender</label>
		<input type="text" size="1" pattern="[A-Za-z]+" value="M" class="form-control" required asp-for="Gender"/>
	</div>

	<div class="mt-3">
		<button type="submit" class="btn btn-primary">Save</button>
	</div>
</form>